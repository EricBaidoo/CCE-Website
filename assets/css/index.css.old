/* WHO WE ARE STATS ROW */
.who-we-are-stats-row {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
}
.who-we-are-stats {
    display: flex;
    gap: 2.5rem;
    background: #fff;
    border-radius: 1.2rem;
    box-shadow: 0 0.2em 1em rgba(0,0,0,0.07);
    padding: 1.5rem 2.5rem;
    align-items: center;
}
.who-we-are-stats .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 100px;
}
.who-we-are-stats .stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: #252163;
    margin-bottom: 0.2rem;
}
.who-we-are-stats .stat-label {
    font-size: 1rem;
    color: #444;
}
@media (max-width: 56.25em) {
    .who-we-are-stats {
        flex-direction: column;
        gap: 1.2rem;
        padding: 1.2rem 1rem;
    }
}


body {
    background-color: #f8f9fa; /* light gray background */
    color: #222; /* dark font color for readability */
    font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

/* Hero styles */

.hero-slider {
    width: 100vw;
    justify-content: stretch;
    color: #fff;
    padding: 3.75rem 0 2.5rem 0; /* 60px, 40px -> 3.75rem, 2.5rem */
    border-radius: 0 0 2em 2em; /* 32px -> 2em */
    box-shadow: 0 0.25rem 1.5rem rgba(0,0,0,0.08); /* 4px, 24px -> 0.25rem, 1.5rem */
    position: relative;
    overflow: hidden;
}
.slide {
    display: none;
    width: 100vw;
}
.slide.active {
    display: block;
}

.hero-content {
    flex: 1 1 320px;
    min-width: 320px;
    max-width: 1fr;
}

.faculty-title {
    font-size: 2.2rem;
    font-weight: 800;
    color: #252163;
    text-align: center;
    margin-bottom: 0.5rem;
}
.faculty-subtitle {
    font-size: 1.1rem;
    color: #252163;
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 500;
}

.hero-content {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh; /* Set hero section to 80% of viewport height */
}
.hero-content .container {
    max-width: 56.25em; /* 900px -> 56.25em */
    margin: 0 auto;
    text-align: center;
}
.hero-badge {
    display: inline-block;
    background: #fff;
    color: #3a0ca3;
    font-weight: 700;
    font-size: 1rem;
    padding: 0.4em 1.2em;
    border-radius: 1em;
    margin-bottom: 1.2em;
    box-shadow: 0 0.125em 0.5em rgba(0,0,0,0.07); /* 2px, 8px -> 0.125em, 0.5em */
}
.hero-title {
    font-size: 2.8rem;
    font-weight: 800;
    margin-bottom: 0.5em;
    letter-spacing: 0.0625em; /* 1px -> 0.0625em */
    color: #fff;
}
.hero-title .accent {
    color: #ffd60a;
    font-weight: 900;
    text-shadow: 0 0.1em 0.3em rgba(255,214,10,0.12);
    font-size: 1.3rem;
    margin-top: 0.3rem;
    margin-bottom: 1.2rem;
    display: block;
}
.hero-buttons {
    display: flex;
    gap: 1.2em;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1.2rem;
    width: 100%;
    display: block;
}
.btn-primary, .btn-secondary {
    padding: 0.9em 2.2em;
    font-size: 1.15rem;
    border-radius: 2em;
    border: none;
    cursor: pointer;
    font-weight: 700;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    box-shadow: 0 0.2em 0.7em rgba(0,0,0,0.09);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.6em;
    letter-spacing: 0.01em;
    justify-content: center;
}
.btn-primary {
    background: linear-gradient(90deg, #ff8800 60%, #ffb84d 100%);
    color: #fff;
    box-shadow: 0 0.2em 0.7em rgba(255,136,0,0.13);
}
.btn-primary:hover {
    background: linear-gradient(90deg, #e67600 60%, #ffb84d 100%);
}
.btn-secondary {
    background: #fff;
    color: #ff8800;
    border: 0.15em solid #ff8800;
    box-shadow: 0 0.1em 0.3em rgba(255,136,0,0.07);
}
.btn-secondary:hover {
    background: #ffe5c2;
    color: #e67600;
    border-color: #e67600;
}

@media (max-width: 56.25em) { /* 900px -> 56.25em */
    .hero-title {
        font-size: 2rem;
    }
    .hero-content {
        min-height: 12.5em; /* 200px -> 12.5em */
    }
    .hero-content .container {
        padding: 0 1em;
    }
}

/* WHO WE ARE SECTION */

.who-we-are-section {
    width: 100%;
    background: #fff;
    padding: 5rem 2rem;
    box-sizing: border-box;
}

.who-we-are-container {
    max-width: 1200px;
    margin: 0 auto;
}

.who-we-are-header {
    text-align: center;
    margin-bottom: 3.5rem;
}

.who-we-are-title {
    font-size: 2.8rem;
    font-weight: 800;
    color: #252163;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
}

.who-we-are-subtitle {
    font-size: 1.2rem;
    color: #666;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    font-weight: 400;
}

.who-we-are-content {
    display: flex;
    gap: 3rem;
    align-items: stretch;
    margin-bottom: 3.5rem;
}

.who-we-are-text {
    flex: 1;
    background: linear-gradient(135deg, #fafbff 0%, #f5f7ff 100%);
    border-radius: 1.5rem;
    padding: 3rem;
    box-shadow: 0 10px 40px rgba(37, 33, 99, 0.08);
    border: 1px solid rgba(37, 33, 99, 0.08);
}

.who-we-are-text h4 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #ff8800;
    margin: 2rem 0 0.8rem 0;
    letter-spacing: -0.01em;
}

.who-we-are-text h4:first-child {
    margin-top: 0;
}

.who-we-are-text p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #444;
    margin: 0;
}

.who-we-are-image {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #fff9f5 0%, #fff 100%);
    border-radius: 1.5rem;
    padding: 2.5rem;
    box-shadow: 0 10px 40px rgba(37, 33, 99, 0.08);
    border: 1px solid rgba(37, 33, 99, 0.08);
}

.who-we-are-image img {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.who-we-are-stats-row {
    display: flex;
    justify-content: center;
}

.who-we-are-stats {
    display: flex;
    gap: 4rem;
    background: linear-gradient(135deg, #fff 0%, #fafbff 100%);
    border-radius: 1.5rem;
    padding: 2.5rem 4rem;
    box-shadow: 0 10px 40px rgba(37, 33, 99, 0.08);
    border: 1px solid rgba(37, 33, 99, 0.08);
}

.who-we-are-stats .stat {
    text-align: center;
}

.who-we-are-stats .stat-number {
    display: block;
    font-size: 3rem;
    font-weight: 800;
    color: #ff8800;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
}

.who-we-are-stats .stat-label {
    display: block;
    font-size: 1.1rem;
    color: #666;
    font-weight: 500;
}

@media (max-width: 900px) {
    .who-we-are-section {
        padding: 3rem 1.5rem;
    }
    
    .who-we-are-title {
        font-size: 2rem;
    }
    
    .who-we-are-subtitle {
        font-size: 1.05rem;
    }
    
    .who-we-are-content {
        flex-direction: column;
        gap: 2rem;
    }
    
    .who-we-are-text,
    .who-we-are-image {
        padding: 2rem;
    }
    
    .who-we-are-stats {
        flex-direction: column;
        gap: 2rem;
        padding: 2rem;
    }
}

































/* FACULTY ENDEAVOR */

.faculty-endeavours-section {
    width: 100%;
    background: linear-gradient(120deg, #fff 70%, #ffe5c2 100%);
    padding: 4rem 0 3rem 0;
    box-sizing: border-box;
}
.faculty-endeavours-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
}
.faculty-endeavours-header {
    text-align: center;
    margin-bottom: 2rem;
}
.faculty-endeavours-title {
    font-size: 2.2rem;
    font-weight: 800;
    color: #252163;
    margin-bottom: 0.5rem;
}
.faculty-endeavours-subtitle {
    font-size: 1.1rem;
    color: #252163;
    margin-bottom: 2rem;
    font-weight: 500;
}
.faculty-endeavours-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2.5rem;
    width: 100%;
    justify-content: stretch;
    align-items: stretch;
    margin-bottom: 2.5rem;
}
.faculty-endeavours-card {
    background: #fff;
    border-radius: 1.2rem;
    box-shadow: 0 0.5em 2em rgba(0,0,0,0.07);
    padding: 1.2rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    flex: 1 1 320px;
    min-width: 320px;
    box-sizing: border-box;
    transition: box-shadow 0.2s, transform 0.2s;
}
.faculty-endeavours-card:hover {
    box-shadow: 0 1em 2.5em rgba(255,136,0,0.13);
    transform: translateY(-0.3em) scale(1.02);
}
.faculty-endeavours-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
}
.faculty-endeavours-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}
.faculty-endeavours-body h3 {
    font-size: 1.1rem;
    color: #ff8800;
    margin: 0.3rem 0 0.2rem 0;
    font-weight: 700;
    text-align: center;
}
.faculty-endeavours-body p {
    font-size: 0.95rem;
    color: #555;
    margin: 0.2rem 0 0.1rem 0;
    text-align: center;
}
.faculty-endeavours-actions {
    margin-top: auto;
    width: 100%;
    display: flex;
    justify-content: center;
}
.faculty-endeavours-link {
    display: inline-block;
    padding: 0.7em 2em;
    font-size: 1.1rem;
    border-radius: 2em;
    background: linear-gradient(90deg, #ff8800 60%, #ffb84d 100%);
    color: #fff;
    font-weight: 700;
    text-decoration: none;
    border: none;
    box-shadow: 0 0.2em 0.7em rgba(255,136,0,0.13);
    transition: background 0.2s;
}
.faculty-endeavours-link:hover {
    background: linear-gradient(90deg, #e67600 60%, #ffb84d 100%);
}

.faculty-endeavours-section {
    width: 100%;
    background: linear-gradient(120deg, #fff 70%, #ffe5c2 100%);
    padding: 4rem 0 3rem 0;
    box-sizing: border-box;
}


/* CCE PEOPLE SECTION */

.people-section {
    width: 100%;
    background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
    padding: 5rem 2rem;
    box-sizing: border-box;
}

.people-section .container {
    max-width: 1200px !important;
    margin: 0 auto !important;
    padding: 0 !important;
}

.section-header {
    text-align: center;
    margin-bottom: 3.5rem;
}

.section-title {
    font-size: 2.8rem;
    font-weight: 800;
    color: #252163;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
}

.lead {
    font-size: 1.2rem;
    color: #666;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
}

.people-groups {
    display: flex;
    flex-direction: column;
    gap: 3rem;
}

.people-group {
    background: #fff;
    border-radius: 1.5rem;
    padding: 2.5rem;
    box-shadow: 0 10px 40px rgba(37, 33, 99, 0.08);
    border: 1px solid rgba(37, 33, 99, 0.08);
}

.people-group-heading {
    font-size: 1.8rem;
    font-weight: 700;
    color: #ff8800;
    margin-bottom: 2rem;
    text-align: center;
}

.people-carousel {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 2rem;
}

.person-card {
    background: linear-gradient(135deg, #fafbff 0%, #fff 100%);
    border-radius: 1.2rem;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 5px 20px rgba(37, 33, 99, 0.08);
    border: 1px solid rgba(37, 33, 99, 0.06);
    transition: transform 0.3s, box-shadow 0.3s;
}

.person-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(255, 136, 0, 0.15);
}

.person-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    object-fit: cover;
    border: 4px solid #fff;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.person-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #252163;
    margin-bottom: 0.5rem;
}

.person-role {
    font-size: 1rem;
    color: #ff8800;
    font-weight: 600;
    margin-bottom: 1rem;
}

.person-bio {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.person-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
}

.profile-link {
    padding: 0.6em 1.5em;
    background: linear-gradient(90deg, #ff8800 0%, #ffb84d 100%);
    color: #fff;
    text-decoration: none;
    border-radius: 2em;
    font-weight: 600;
    font-size: 0.9rem;
    transition: background 0.3s;
}

.profile-link:hover {
    background: linear-gradient(90deg, #e67600 0%, #ff9900 100%);
}

.email-link, .linkedin-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #f0f0f0;
    color: #252163;
    transition: all 0.3s;
}

.email-link:hover {
    background: #ff8800;
    color: #fff;
}

.linkedin-link:hover {
    background: #0077b5;
    color: #fff;
}

@media (max-width: 900px) {
    .people-section {
        padding: 3rem 1.5rem;
    }
    
    .people-carousel {
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 1.5rem;
    }
}


